}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col" >
        @if (Model.Cars.Count()>0)
        {
            @foreach (var car in Model.Cars)
            {
                <button class="accordion">@Html.DisplayFor(m => car.CarMake) </button>
                <div class="panel">
                    <p></p>
                    <p></p>
                </div>
            }
        }
        else
        {
            <p>No cars found</p>
        }
    </div>
</div>


    
    
